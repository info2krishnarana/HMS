
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col col-lg-12">
        <h2>Accomodation Types</h2>
        <hr />
    </div>
</div>
<div class="row mb-3">
    <div class="col col-lg-12">
       <div class="input-group">
           <input type="text" class="form-control" placeholder="Search..." />
           <div class="input-group-append">
               <button type="button" class="btn btn-outline-primary"><i class="fas fa-search mr-1"></i> Search</button>
               <button type="button" class="btn btn-outline-secondary"><i class="fas fa-redo-alt mr-1"></i> Reset</button>
               <button id="createButton" type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#actionModel"><i class="fas fa-plus-square mr-1"></i>Create</button>
           </div>
       </div>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderAction("Listing");}
    </div>
</div>

<div class="modal fade" id="actionModel" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    </div>
</div>

<script>
    $('#createButton').click(function () {
        $.ajax({
            url: '@Url.Action("Action","AccomodationTypes")',
        }).done(function(response) {
            $('#actionModel .modal-dialog').html(response);
        });
    });
</script>