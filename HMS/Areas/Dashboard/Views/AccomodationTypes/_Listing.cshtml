@model HMS.Areas.Dashboard.ViewModels.AccomodationTypeViewModel

@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{
    <div class="table-responsive-sm">
        <table class="table table-hover table-sm">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var accomodationType in Model.AccomodationTypes.Select((x, i) => new { Data = x, Index = i + 1 }))
                {
                    <tr>
                        <td>@accomodationType.Index </td>
                        <td>@accomodationType.Data.Name</td>
                        <td>@accomodationType.Data.Description</td>
                        <td>
                            <button data-href='@Url.Action("Action", "AccomodationTypes", new { id = accomodationType.Data.ID })' type="button" class=" data-btn btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#actionModel"><i class="fas fa-edit m-1"></i>Edit</button>
                            <button data-href='@Url.Action("Delete", "AccomodationTypes", new { id = accomodationType.Data.ID })' type="button" class="data-btn btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#actionModel"><i class="fas fa-trash-alt m-1"></i> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center" role="alert">
        No record(s) found.
    </div>
}
